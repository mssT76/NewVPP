@model IEnumerable<NewVPP.Models.Order>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.OrderDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Address)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.TotalMoney)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Customer)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.TransactStatus)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.OrderDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Address)
				</td>
				@{
					var Giatien = item.TotalMoney;
				}
				<td>
					@Giatien.Value.ToString("#,##0 VND")
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Customer.FullName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TransactStatus.Status)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
