@model NewVPP.ModelViews.ChangePasswordViewModel
    

<div class="myaccount-details">
    <form asp-controller="Accounts" asp-action="ChangePassword" method="post">
        <div>
            <div class="form-group">
                <label class="control-label">Mật khẩu hiện tại</label>
                <input class="form-control" asp-for="PasswordNow" type="password">
            </div>
            <div class="form-group">
                <label class="control-label">Mật khẩu mới</label>
                <input class="form-control" asp-for="Password" type="password">
            </div>
            <div class="form-group">
                <label class="control-label">Nhập lại mật khẩu mới</label>
                <input class="form-control" asp-for="ConfirmPassword" type="password">
            </div>
            <div class="form-group"
                <button class="btn btn-primary" type="submit">
                    <span>Lưu thay đổi</span>
                </button>
            </div>
        </div>
    </form>
</div>